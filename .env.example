# Environment variables example file
# Copy this to .env.local and fill in your actual values

# Database - PostgreSQL Production
DATABASE_URL="postgresql://username:password@localhost:5432/erenailab_blog"
DIRECT_URL="postgresql://username:password@localhost:5432/erenailab_blog"

# For Supabase (recommended for production)
# DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"
# DIRECT_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# For PlanetScale (alternative)
# DATABASE_URL="mysql://[username]:[password]@[host]/[database]?sslaccept=strict"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-minimum-32-characters-long"

# OAuth Providers
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Translation API (Microsoft Translator - Recommended)
AZURE_TRANSLATOR_KEY="your-microsoft-translator-api-key"
AZURE_TRANSLATOR_REGION="eastus"
AZURE_TRANSLATOR_ENDPOINT="https://api.cognitive.microsofttranslator.com"

# Translation API (DeepL - Alternative)
DEEPL_API_KEY="your-deepl-api-key"
DEEPL_API_URL="https://api-free.deepl.com/v2"

# Email Service (Production)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
FROM_EMAIL="noreply@yourdomain.com"
FROM_NAME="ErenAILab Blog"

# Security
RATE_LIMIT_MAX="100" # requests per window
RATE_LIMIT_WINDOW="15" # minutes
CSP_REPORT_URI="https://yourdomain.com/api/csp-report"

# Monitoring & Analytics
GOOGLE_ANALYTICS_ID="your-ga4-id"
SENTRY_DSN="your-sentry-dsn"
UPSTASH_REDIS_REST_URL="your-upstash-redis-url"
UPSTASH_REDIS_REST_TOKEN="your-upstash-token"

# Site Configuration
SITE_URL="https://yourdomain.com"
SITE_NAME="ErenAILab Blog"
SITE_DESCRIPTION="Academic AI Research Blog"
ADMIN_EMAIL="admin@yourdomain.com"

# Content & Media
UPLOADTHING_SECRET="your-uploadthing-secret"
UPLOADTHING_APP_ID="your-uploadthing-app-id"
CLOUDINARY_CLOUD_NAME="your-cloudinary-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Development Only
NODE_ENV="development"
DEBUG="false"